<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background for the dropdown -->
    <item>
        <shape android:shape="rectangle">
            <!-- Background color for the dropdown -->
            <solid android:color="@color/custom_spinner_dropdown_background_color" />
        </shape>
    </item>
    <!-- Dropdown arrow icon -->
    <item android:right="8dp" android:left="8dp" android:gravity="center">
        <bitmap
            android:src="@drawable/arrow_drop_down_24"
            android:tint="@color/custom_spinner_dropdown_arrow_color"
            android:gravity="center" />
    </item>
</layer-list>
